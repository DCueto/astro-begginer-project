---
import type { MarkdownLayoutProps } from "astro";
import Main from "./Main.astro";

type Props = MarkdownLayoutProps<{
  title: string
  subtitle: string
  poster: string
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title="Blog">
  <figure class="poster__figure">
    <img src={ poster } alt="" 
      width="100%" 
      height="480px" 
      class="poster__image"/>

    <figcaption class="poster__caption">
      Poster image for { title.toLowerCase() }
    </figcaption>
  </figure>

  <h1>{ title }</h1>
  <h2>{ subtitle }</h2>

  <slot />
</Main>

<style>
  h1 + h2 {
    margin-bottom: 3rem;
  }

  .poster__figure {
    margin: 0;
  }

  .poster__image {
    max-width: 100%;
    border-radius: 10px;
  }

  .poster__caption {
    font-size: 0.9rem;
    margin-top: .4rem;
  }
</style>